@model IEnumerable<DeportesWeb.Models.SportRegistryViewModel>
@{
    ViewBag.Title = "Registro";
}
<h2>Deportes Registrados</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>DEPORTE</th>
            <th>FRECUENCIAS</th>
            <th>REGISTROS</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(modelItem => item.idUser)
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.frecuencias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.registros)
                </td>
                <td>
                    @Html.ActionLink("Registrar", "Registry", new { id = item.id }) 
                </td>
            </tr>
        }
    </tbody>
</table>
